<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#2563EB">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/logo_toolbar"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingStart="12dp" />
        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:id="@+id/sliderContainer"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <SeekBar
                android:id="@+id/btnToggle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_status_pill"
                android:progressDrawable="@drawable/slider_progress"
                android:thumb="@drawable/slider_thumb"
                android:max="100"
                android:progress="0"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:thumbOffset="0dp" />

            <com.buligin.vishnucast.HintArrowView
                android:id="@+id/arrowHint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:clickable="false"
                android:focusable="false" />
        </FrameLayout>




        <ProgressBar
            android:id="@+id/signalLevelBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/signal_level_bar" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_status_pill"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/status_stopped"
            android:textColor="#111827"
            android:textSize="14sp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_info_card"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvIp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#111827"
                android:textSize="14sp"
                android:text="@string/ip_unknown" />

            <TextView
                android:id="@+id/tvHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:text="@string/hint_open_url" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvClients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_status_pill"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Connected clients: 0"
            android:textColor="#6B7280"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivQr"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/app_name" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />
    </LinearLayout>
</ScrollView>
