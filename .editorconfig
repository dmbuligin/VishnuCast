root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{kt,kts}]
max_line_length = 120
ij_kotlin_imports_layout = *,java.**,javax.**,kotlin.**,kotlinx.**,android.**,com.**,io.**,org.**
ij_kotlin_align_multiline_parameters = true
ij_kotlin_continuation_indent_size = 4
